@using SupporterPortal.Web.ViewModels.Shared
@using System.Security.Claims
@model NewsLetterFormViewModel

@{
    bool isAuthenticated = User?.Identity?.IsAuthenticated == true;
    string? claimName = isAuthenticated
        ? (User?.FindFirst(ClaimTypes.Name)?.Value
           ?? User?.FindFirst("name")?.Value
           ?? User?.Identity?.Name)
        : null;

    string? claimEmail = isAuthenticated
        ? (User?.FindFirst(ClaimTypes.Email)?.Value
           ?? User?.FindFirst("email")?.Value)
        : null;
}


<section class="newsletter-section py-5" data-component="newsletter-form" data-error-text="@Model.ErrorText">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">

                    <h2 class="card-title mb-3 text-center">@Model.Title</h2>
                    <p class="card-text mb-4 text-center">@Model.Description</p>

                    <form id="newsletterForm"  method="post" novalidate >
                        @Html.AntiForgeryToken()

                        <div id="newsletterFeedback" class="mb-3"></div>

                        <div class="mb-3 js-form-field">
                            <label for="Name" class="form-label">@Model.NameLabel</label>
                            <input type="text" id="Name" value="@(claimName ?? "")" placeholder="@Model.NamePlaceholder" name="Name" class="form-control form-control-lg" required>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="mb-3 js-form-field">
                            <label for="Email" class="form-label">@Model.EmailLabel</label>
                            <input type="email" id="Email" value="@(claimEmail ?? "")" placeholder="@Model.EmailPlaceholder" name="Email" class="form-control form-control-lg" required>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">@Model.SubmitText</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
