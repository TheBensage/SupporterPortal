@using SupporterPortal.Web.ViewModels.Shared
@model NewsLetterFormViewModel


<section class="newsletter-section py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">

                    <h2 class="card-title mb-3 text-center">@Model.Title</h2>
                    <p class="card-text mb-4 text-center">@Model.Description</p>

                    <form id="newsletterForm" data-component="newsletter-form" method="post" novalidate data-error-text="@Model.ErrorText">
                        @Html.AntiForgeryToken()

                        <div id="newsletterFeedback" class="mb-3"></div>

                        <div class="mb-3">
                            <label for="Name" class="form-label">@Model.NameLabel</label>
                            <input type="text" id="Name" placeholder="@Model.NamePlaceholder" name="Name" class="form-control form-control-lg" required>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">@Model.EmailLabel</label>
                            <input type="email" id="Email" placeholder="@Model.EmailPlaceholder" name="Email" class="form-control form-control-lg" required>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">@Model.SubmitText</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
